<a asp-controller="Narudzba" asp-action="Create" ><button type="submit">Kreiraj narudzbu</button></a>

<div id="bottomBar">
    <a asp-controller="Artikal" asp-action="Index"><button type="button">Nazad na artikle</button></a>
    <div id="totalPriceContainer">
        <label id="totalPriceLabel">Ukupna cijena: </label>
        <span id="totalPriceValue"></span>
    </div>
</div>


@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            updateTotalPrice();
      });

        function updateTotalPrice() {
            var total = 0;
            var prices = document.querySelectorAll('.price');
            prices.forEach(function (price) {
                total += parseFloat(price.textContent) || 0;
            });
            var totalPriceSpan = document.getElementById('totalPriceValue');
            totalPriceSpan.textContent = total.toFixed(2);
        }
    </script>
}
