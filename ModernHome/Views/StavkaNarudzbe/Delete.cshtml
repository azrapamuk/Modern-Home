@model ModernHome.Models.StavkaNarudzbe

@{
    ViewData["Title"] = "Delete";
    var artikal = ViewBag.Artikal as ModernHome.Models.Artikal;
}


 <body style="background-color:#C4A693">

        <a asp-controller="Artikal" asp-action="Index" style="color:#fff; text-decoration:none; font-size: 3vh;">← Nazad na artikle</a>
        <div class="row" style="background-color:#fff; border-radius:12px; padding:2vw;">
        <h3 style="margin-bottom:3vh;   ">Da li ste sigurni da želite da obrišete ovaj artikal iz vaše korpe?</h3>,
        <div class="row">
            <div class="col-sm-6">
                <dl class="row">
                    <dt class="col-sm-4 custom-text">Naziv:</dt>
                    <dd class="col-sm-8 custom-text">@Html.DisplayFor(model => artikal.naziv)</dd>

                    <dt class="col-sm-4 custom-text">Količina:</dt>
                    <dd class="col-sm-8 custom-text">@Html.DisplayFor(model => model.kolicina)</dd>

                    <dt class="col-sm-4 custom-text">Cijena:</dt>
                    <dd class="col-sm-8 custom-text">@Html.DisplayFor(model => model.cijena)</dd>
                </dl>
            </div>
            <div class="col-sm-6">
                <img src="@artikal.slika" alt="slika" style="width: 30vw; height: auto; border-radius: 12px;" />
            </div>
        </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
            <input type="submit" value="Obriši" class="btn btn-danger" style=" color: #fff; border:none; font-size:3vh; margin-top:2vh; border-radius: 3px;" /> 
    </form>
</div>
</body>

<style>
    .custom-text {
        font-size: 3.5vh; 
    }
</style>