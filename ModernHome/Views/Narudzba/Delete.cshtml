@model ModernHome.Models.Narudzba

@{
    ViewData["Title"] = "Delete";
}

<div>
    <a asp-action="Index"><button style="margin-bottom:2vh; border:none;">← Nazad</button></a>

</div>


<h3>Da li ste siguruni da želite obrisati ovu narudžbu?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID korisnika
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Idkorisnik)
        </dd>
        <dt class = "col-sm-2">
            Vrijeme narudžbe
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.vrijemeNarudzbe)
        </dd>
        <dt class = "col-sm-2">
            Stanje isporuke
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.stanjeIsporuke)
        </dd>
        <dt class = "col-sm-2">
            ID korpe
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Idkorpa)
        </dd>
        <dt class="col-sm-2">
            Cijena
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cijena)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" style=" color: #fff; border:none; font-size:3vh; margin-top:2vh; border-radius: 5px;" /> 
    </form>
</div>
