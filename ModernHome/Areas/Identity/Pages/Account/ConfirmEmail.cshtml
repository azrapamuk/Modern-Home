@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<body class="hide-footer">
    <section>
        <div style="width: 100%; text-align: center;">
            <img src="~/images/check.png" style="height: 20vh; width: auto;" alt="Email Icon" />
        </div>
        <h1 style="font-weight:bold; font-size: 7vh;">Registracija uspješna</h1>
        <p>Uspješno ste kreirali svoj korisnički račun.</p>
        <a asp-area="Identity" asp-page="/Account/Login"><button style="font-size: 4vh; font-weight: bold; color: #ffffff; background-color: #212529; border-radius: 5px;"> Prijavite se</button></a>
    </section>
</body>

<style>
    .hide-footer {
        background-color: #C4A693;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

        .hide-footer footer {
            display: none;
        }

        .hide-footer nav {
            display: none;
        }

    section {
        background-color: #ffffff;
        border-radius: 12px;
        height: 50vh;
        width: 84vw;
        box-shadow: 0px 8px 8px 0px rgba(0.2, 0.2, 0.2, 0.2);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    img {
        height: 30vh;
        width: auto;
    }

    p {
        font-size: 3vh;
    }

</style>

