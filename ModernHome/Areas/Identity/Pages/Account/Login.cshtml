@page

@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
</head>

<body class="hide-footer">
    <div class="row">
        <div class="col-md-4">
            <section style="background-color:#ffffff; padding: 5vw; border-radius:12px; width: 40vw; height: 80vh;">
                <h1 style="font-family: 'Inter'; font-size:5vw; font-weight: bold;">@ViewData["Title"]</h1>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="Email" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">E-mail</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #222222;">Log in</button>
                    </div>
                    <div>
                        <p style="margin-top:3vh;text-align:center;">
                            <a class="forgotlink" id="forgot-password" asp-page="./ForgotPassword">Zaboravili ste lozinku?</a>
                        </p>
                        <p style="margin-top:10vh;text-align:center;">
                            <a class="registerlink" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Niste korisnik? Registrujte se sada.</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .hide-footer footer {
        display: none;
    }

    .hide-footer{
        background: url('@Url.Content("~/images/piclogin.jpg")') no-repeat center center;
        background-size: cover;
    }

    .registerlink{
        color: #333333;
        text-decoration:none;
    }
    .forgotlink{
        color: #333333;
        text-decoration: none;
    }

    .registerlink:hover{
        font-weight:bold;
    }

    .forgotlink:hover {
        color: #333333;
        font-weight: bold;
    }

</style>