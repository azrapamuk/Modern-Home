@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<head>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
</head>

<body class="hide-footer">
    <div class="row">
        <div class="col-md-4" style="background-color:#ffffff; padding: 5vw; border-radius:12px; width: 40vw; height: 130vh;">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h1 style="font-family: 'Inter'; font-size:5vw; font-weight: bold;">@ViewData["Title"]</h1>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ime" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.ime">Ime</label>
                    <span asp-validation-for="Input.ime" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.prezime" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.prezime">Prezime</label>
                    <span asp-validation-for="Input.prezime" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.adresa" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.adresa">Adresa</label>
                    <span asp-validation-for="Input.adresa" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.brojTel" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.brojTel">Broj telefona</label>
                    <span asp-validation-for="Input.brojTel" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Lozinka</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Potvrdite Lozinku</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #222222; border:none;">Registrujte se</button>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .hide-footer footer {
        display: none;
    }

    .hide-footer {
        background: url('@Url.Content("~/images/picregister.jpg")') no-repeat center center;
        background-size: cover;
    }

</style>